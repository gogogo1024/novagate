# 数据库环境变量配置示例
# 复制此文件为 .env 并修改配置

# ===== Redis 配置 =====
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb  # 最大内存限制

# Redis Insights（可视化工具，可选）
REDIS_INSIGHTS_PORT=5540

# ===== PostgreSQL 配置（预留，按需启动）=====
# docker-compose --profile postgres up -d
POSTGRES_PORT=5432
POSTGRES_DB=novagate
POSTGRES_USER=novagate
POSTGRES_PASSWORD=novagate_dev_change_in_prod

# ===== MySQL 配置（预留，按需启动）=====
# docker-compose --profile mysql up -d
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=root_change_in_prod
MYSQL_DATABASE=novagate
MYSQL_USER=novagate
MYSQL_PASSWORD=novagate_dev_change_in_prod

# ===== Kafka 配置 =====
# docker-compose --profile kafka up -d
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=9093
KAFKA_UI_PORT=8080

# ===== Milvus 向量数据库配置 =====
# docker-compose --profile milvus up -d
MILVUS_PORT=19530
MILVUS_METRIC_PORT=9091
ATTU_PORT=8000  # Milvus 管理界面

# MinIO（Milvus 依赖）
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_change_in_prod

# ===== 应用配置 =====
# Novagate 网关
NOVAGATE_ADDR=:9000
NOVAGATE_IDLE_TIMEOUT=5m
NOVAGATE_WRITE_TIMEOUT=10s

# ACL 服务
ACL_ADDR=:8888
ACL_ENABLE_STATS=true
ACL_REDIS_ADDR=redis:6379
ACL_REDIS_KEY_PREFIX=acl:
